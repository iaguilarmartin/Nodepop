{
  "name": "Nodepop",
  "version": "1.0.0",
  "description": "API para aplicaciones de compra/venta de productos",
  "apidoc": {
    "title": "Nodepop REST API",
    "url" : "http://localhost:3000"
  },
  "jshintConfig": {
    "node": true,
    "esnext": true,
    "globals": {},
    "globalstrict": true,
    "quotmark": "single",
    "undef": true,
    "unused": true
  },
  "private": true,
  "scripts": {
    "start": "DEBUG=Nodepop:* EXE_MODE=multi nodemon ./bin/www",
    "single": "DEBUG=Nodepop:* nodemon ./bin/www",
    "installDB": "node tasks/install_db.js",
    "jshint": "jshint . || echo 'Done.'"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "crypto": "0.0.3",
    "debug": "~2.2.0",
    "ejs": "~2.3.3",
    "express": "~4.13.1",
    "jsonwebtoken": "^6.2.0",
    "mongoose": "^4.4.13",
    "morgan": "~1.6.1",
    "serve-favicon": "~2.3.0"
  }
}
